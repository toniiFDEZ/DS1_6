
<div class="Fondo">
  <%= render @producto %>
  <% if @producto.images.attached? %>
    <% for image in @producto.images.where(:fpic => 1) do %>
      <%= image_tag(image, class: "feats") %>
    <% end %>
    <% for image in @producto.images.where(:fpic => 0) do %>
      <%= image_tag(image, class: "productoshow") %>
    <% end %>
  <% end %>

  <p>
    <%= link_to "Edit this producto", edit_producto_path(@producto) %> |
  </p>
  <p>
    <%= link_to "Back to productos", productos_path %>
  </p>
  <p>
    <%= button_to "Destroy this producto", @producto, method: :delete %>
  </p>
</div>

